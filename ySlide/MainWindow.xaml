                            <materialDesign:PackIcon Kind="FormatText"  />
                        </Button>

                        <Separator/>

                        <Button ToolTip="Format text background color" Name="btnColor1" Click="btnOtherColors_Click">
                            <materialDesign:PackIcon Kind="FormatColorFill"  />

                        </Button>

